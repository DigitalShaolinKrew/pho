html
  font-size: 16px

body
  font-family: $font-text--primary

html, body
  height: 100vh
  background-color: $WHITE
  
#pages-container, #front-block, .page-a, .page-b
  @extend .full
  position fixed

.is-mobile
  .page-a, .page-b
    overflow-y scroll

#app
  -webkit-font-smoothing antialiased

#front-block
  z-index 9999999

.parallax-wrapper
  display inline-block
  width 100%

.spacer
  height 10vh

.hero
  width 100%
  height 100vh
  display flex
  flex-flow column nowrap
  justify-content center
  align-items center
  text-align center

  h1
    font-size 500%