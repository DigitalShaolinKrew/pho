.loader
  @extend .full
  display flex
  flex-flow row nowrap
  justify-content center
  align-items center
  z-index 99999
  background-color $WHITE

  &__container
    position relative
    width 50%

  &__progress
    font-size 3rem
    text-align center
    margin-bottom 20px
    color $BLACK

  &__bar
    position absolute
    left 0
    bottom 0
    width 100%
    height 5px
    background rgba( $BLACK, 0.1 )
    transform scaleX( 0 )